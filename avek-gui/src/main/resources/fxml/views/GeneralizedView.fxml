<?xml version="1.0" encoding="UTF-8"?>

<?import fr.axonic.avek.gui.components.filelist.FileListView?>
<?import fr.axonic.avek.gui.components.jellyBeans.JellyBeanPane?>
<?import fr.axonic.avek.gui.components.MonitoredSystemView?>
<?import fr.axonic.avek.gui.components.parameters.list.parametersGroup.GeneralizedParametersRoot?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.BorderPane"
        styleClass="pane">
    <!-- fx:controller="fr.axonic.avek.gui.view.GeneralizedView"
          -->

    <!-- ◧ ◨ ⬒ ⬓ -->

    <stylesheets>
        <URL value="@../../css/views/GeneralizedView.css" />
    </stylesheets>


    <left>
        <Group styleClass="pane">
            <ToggleButton fx:id="outerMonitoredSystemButton"
                          text="⬓ Monitored System" rotate="-90"
                          onAction="#onClickMonitoredSystemButton"
                          selected="true"/>
        </Group>
    </left>
    <center>
        <SplitPane fx:id="monitoredSystemSplitPane" styleClass="pane">
            <BorderPane fx:id="monitoredSystemPane" maxWidth="300" styleClass="pane">
                <top>
                    <BorderPane styleClass="pane">
                        <center>
                            <Label fx:id="monitoredSystemTitle" text="Monitored System" />
                        </center>
                        <right>
                            <Button fx:id="innerMonitoredSystemButton" text="◧"
                                    onAction="#onClickMonitoredSystemButton"/>
                        </right>
                    </BorderPane>
                </top>
                <center>
                    <MonitoredSystemView fx:id="monitoredSystemView"/>
                </center>
                <bottom>
                    <Button fx:id="monitoredSystemHistory" text="History" />
                </bottom>
            </BorderPane>

            <!-- Here is a Split -->

            <BorderPane>
                <center>
                    <BorderPane>
                        <top>
                            <JellyBeanPane fx:id="jellyBeanPane" />
                        </top>
                        <center>
                            <SplitPane orientation="VERTICAL" fx:id="commentsSplitPane">
                                <SplitPane fx:id="fileListSplitPane">
                                    <BorderPane>
                                        <top>
                                            <Label textAlignment="CENTER" BorderPane.alignment="CENTER">
                                                Experimentation parameters
                                            </Label>
                                        </top>
                                        <center>
                                            <ScrollPane>
                                                <GeneralizedParametersRoot fx:id="parametersRoot"/>
                                            </ScrollPane>
                                        </center>
                                    </BorderPane>

                                    <!-- Here is an Horizontal Split -->

                                    <BorderPane fx:id="fileListPane" maxWidth="300">
                                        <top>
                                            <BorderPane>
                                                <left>
                                                    <Button fx:id="innerFileListButton" text="◨"
                                                            onAction="#onClickFileListViewButton"/>
                                                </left>
                                                <center>
                                                    <Label>
                                                        Complementary files
                                                    </Label>
                                                </center>
                                            </BorderPane>
                                        </top>
                                        <center>
                                            <FileListView fx:id="uploadedFiles"/>
                                        </center>
                                    </BorderPane>
                                </SplitPane>

                                <!-- Here is an Horizontal Split -->

                                <BorderPane fx:id="commentsPane" maxHeight="300">
                                    <top>
                                        <BorderPane>
                                            <left>
                                                <Button fx:id="innerCommentsButton" text="◨"
                                                        onAction="#onClickCommentsButton"/>
                                            </left>
                                            <center>
                                                <Label>
                                                    Comments
                                                </Label>
                                            </center>
                                        </BorderPane>
                                    </top>
                                    <center>
                                        <TextArea fx:id="textfieldComments"/>
                                    </center>
                                </BorderPane>
                            </SplitPane>
                        </center>
                    </BorderPane>
                </center>
                <right>
                    <VBox>
                        <Group>
                            <ToggleButton fx:id="outerFileListButton"
                                          text="Files ⬓" rotate="90"
                                          onAction="#onClickFileListViewButton"
                                          selected="true"/>
                        </Group>
                        <Group>
                            <ToggleButton fx:id="outerCommentsButton"
                                          text="Comments ⬓" rotate="90"
                                          onAction="#onClickCommentsButton"
                                          selected="true"/>
                        </Group>
                    </VBox>
                </right>
            </BorderPane>
        </SplitPane>
    </center>
</fx:root>
