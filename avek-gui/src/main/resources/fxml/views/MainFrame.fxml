<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import java.net.URL?>
<fx:root xmlns:fx="http://javafx.com/fxml"
         type="javafx.scene.layout.BorderPane"
         styleClass="mainFrame">

    <stylesheets>
        <URL value="@../../css/views/MainFrame.css" />
    </stylesheets>

    <top>
        <BorderPane styleClass="top">
            <left>
                <ImageView fitWidth="150"
                           preserveRatio="true">
                    <Image url="@../../images/LogoI3S.png"/>
                </ImageView>
            </left>
            <center>
                <Label styleClass="frameTitle">
                    AVEK Analyser
                </Label>
            </center>
            <right>
                <Button text="?"/>
            </right>
        </BorderPane>
    </top>
    <bottom>
        <HBox>
            <Button fx:id="btnStrategy" mnemonicParsing="false"
                    onAction="#onClicStrategyButton"
                    text="Strategy" maxWidth="Infinity"/>
        </HBox>
    </bottom>
</fx:root>
